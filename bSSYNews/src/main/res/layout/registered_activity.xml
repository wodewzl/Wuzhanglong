<?xml version="1.0" encoding="utf-8"?>
<com.beisheng.base.view.BSReboundScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/C1"
    android:fadingEdge="none"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/C1"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/content_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="vertical"
            android:padding="2dp" >

            <EditText
                android:id="@+id/user_et"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/C1"
                android:gravity="center_vertical"
                android:hint="输入帐号（3-15位）"
                android:paddingLeft="15dp"
                android:textColorHint="@color/text_hint_color"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@color/devider_bg" />

            <EditText
                android:id="@+id/password_et"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@color/C1"
                android:gravity="center_vertical"
                android:hint="输入密码（至少8位）"
                android:paddingLeft="15dp"
                android:textColorHint="@color/text_hint_color"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@color/devider_bg" />

            <EditText
                android:id="@+id/email_et"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@color/C1"
                android:gravity="center_vertical"
                android:hint="输入邮箱"
                android:paddingLeft="15dp"
                android:textColorHint="@color/text_hint_color"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@color/devider_bg" />

            <EditText
                android:id="@+id/phone_et"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@color/C1"
                android:gravity="center_vertical"
                android:hint="请输入手机号，用于积分商品兑换"
                android:paddingLeft="15dp"
                android:textColorHint="@color/text_hint_color"
                android:textSize="14sp" />
        </LinearLayout>

        <Button
            android:id="@+id/registered_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@color/C9"
            android:padding="10dp"
            android:text="立即注册"
            android:textColor="@color/C1" />
    </LinearLayout>

</com.beisheng.base.view.BSReboundScrollView>