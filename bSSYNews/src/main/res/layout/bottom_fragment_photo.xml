            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="center"
            android:src="@drawable/photo_bottom_02" 
            android:visibility="gone"/> -->

        <ImageView
            android:id="@+id/img_03"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/photo_bottom_03" />

        <ImageView
            android:id="@+id/img_04"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/photo_bottom_04" />

        <ImageView
            android:id="@+id/img_05"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/photo_bottom_05" />
    </LinearLayout>

</LinearLayout>