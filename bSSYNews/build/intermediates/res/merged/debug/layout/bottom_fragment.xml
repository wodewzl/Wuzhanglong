<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
      android:paddingTop="10dp"
      android:paddingBottom="10dp"
      android:paddingLeft="15dp"
      android:paddingRight="5dp">

        <TextView
            android:id="@+id/comment_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:hint="说两句..."
            android:paddingLeft="15dp"
            android:layout_marginRight="5dp"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/img_00"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/img_00_gray" />

        <ImageView
            android:id="@+id/img_01"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/img_01_gray"
      android:visibility="gone"  />

        <ImageView
            android:id="@+id/img_02"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/img_02_gray"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/img_03"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/img_03_gray"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/img_04"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/img_04_gray" />

        <ImageView
            android:id="@+id/img_05"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/img_05_gray" />
    </LinearLayout>

</LinearLayout>