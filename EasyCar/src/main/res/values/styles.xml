<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CarCheckBox">
        <item name="cbd_width">32dp</item>
        <item name="cbd_height">32dp</item>
        <item name="cbd_boxSize">15dp</item>
        <item name="cbd_cornerRadius">100dp</item>
        <item name="cbd_strokeSize">2dp</item> <!--边框-->
        <item name="cbd_strokeColor">@color/Car4</item>

        <!--<item name="cbd_tickColor">@color/C9</item>选择勾的颜色-->
        <item name="cbd_animDuration">@android:integer/config_mediumAnimTime</item>
    </style>
    <style name="CarCheckBox2">
        <item name="cbd_width">32dp</item>
        <item name="cbd_height">32dp</item>
        <item name="cbd_boxSize">15dp</item>
        <item name="cbd_cornerRadius">100dp</item>
        <item name="cbd_strokeSize">2dp</item> <!--边框-->
        <item name="cbd_strokeColor">@color/Car5</item>

        <!--<item name="cbd_tickColor">@color/C9</item>选择勾的颜色-->
        <item name="cbd_animDuration">@android:integer/config_mediumAnimTime</item>
    </style>
    <style name="CarCheckBox3">
        <item name="cbd_width">42dp</item>
        <item name="cbd_height">42dp</item>
        <item name="cbd_boxSize">36dp</item>
        <item name="cbd_cornerRadius">100dp</item>
        <item name="cbd_strokeSize">2dp</item> <!--边框-->
        <item name="cbd_strokeColor">@color/Car9</item>

        <!--<item name="cbd_tickColor">@color/C9</item>选择勾的颜色-->
        <item name="cbd_animDuration">@android:integer/config_mediumAnimTime</item>
    </style>

    <style name="SercurityDialogTheme" parent="@android:style/Theme.Dialog">
        <!-- 设置未浮动窗口 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 设置无边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 设置无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 设置完全透明 -->
        <item name="android:windowBackground">@color/alpha_50_black</item>
        <!-- 设置屏幕变暗 -->
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowAnimationStyle">@style/SercurityAnimation</item>
    </style>
    <style name="SercurityAnimation" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/input_method_enter</item>
        <item name="android:windowExitAnimation">@anim/input_method_exit</item>
    </style>

    <style name="VerticalSeparationLineStyle">
        <item name="android:background">@color/C3_1</item>
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="HorizontalSeparationLineStyle">
        <item name="android:background">#ebeef3</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="KeyBroadBtnStyle">
        <item name="android:textSize">22sp</item>
        <item name="android:background">@drawable/keybroad_btn_selector</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
    </style>
</resources>
