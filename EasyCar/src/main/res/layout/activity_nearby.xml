<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/C3"
    android:orientation="vertical"
    tools:context="com.beisheng.easycar.activity.NearbyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/C3_1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/search_tv"
            style="@style/margin_15_10"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/bg_search_bar_7_write"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:paddingRight="15dp"
            android:text="搜索您想要的宝贝"
            android:textColor="@color/C6"
            android:textColorHint="@color/C6"

            android:textSize="@dimen/sp_12"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/left_recyclerview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/C3">
        </android.support.v7.widget.RecyclerView>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/right_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/white">
        </android.support.v7.widget.RecyclerView>

    </LinearLayout>
</LinearLayout>
