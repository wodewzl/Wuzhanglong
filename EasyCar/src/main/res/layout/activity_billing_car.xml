<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/C3"
    tools:context="com.beisheng.easycar.activity.BillingCarActivity">

    <com.wuzhanglong.library.view.ReboundScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                style="@style/padding_15_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/C1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/car_img"
                    android:layout_width="45dp"
                    android:layout_height="30dp"
                    />

                <TextView
                    android:id="@+id/number_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="宝马X5"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/km_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:gravity="right"

                    android:text="111"
                    android:textColor="@color/Car1"/>
            </LinearLayout>

            <LinearLayout
                style="@style/padding_15_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/C1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/billing_car_01"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:text="3分钟"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="3dp"
                    android:background="@color/C3"/>

                <TextView
                    android:id="@+id/distance_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/billing_car_02"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:text="64公里"/>
            </LinearLayout>

            <LinearLayout
                style="@style/padding_15_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/C1"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/padding_15_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="车费合计"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/toast_money_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="188"
                        android:textColor="@color/Car1"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/C3"
                    />

                <LinearLayout
                    style="@style/padding_15_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/money_type_01_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="车费合计"
                        android:textColor="@color/C5"/>

                    <TextView
                        android:id="@+id/money_01_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="188"
                        android:textColor="@color/C5"/>
                </LinearLayout>

                <LinearLayout
                    style="@style/padding_15_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/money_type_02_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="异地还车费"
                        android:textColor="@color/C5"/>

                    <TextView
                        android:id="@+id/money_02_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/C5"
                        tools:text="188"/>
                </LinearLayout>

                <LinearLayout
                    style="@style/padding_15_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/money_type_03_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="不计免赔服务"
                        android:textColor="@color/C5"/>

                    <TextView
                        android:id="@+id/money_03_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/C5"
                        tools:text="188"/>
                </LinearLayout>

                <LinearLayout
                    style="@style/padding_15_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/money_type_04_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="车费合计"
                        android:textColor="@color/C5"/>

                    <TextView
                        android:id="@+id/money_04_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="188"
                        android:textColor="@color/C5"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                style="@style/padding_15_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/C1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <com.rey.material.widget.CheckBox
                        android:id="@+id/check_01"
                        style="@style/WZLCheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="停车点还车"
                        android:textColor="@color/C5"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <com.rey.material.widget.CheckBox
                        android:id="@+id/check_02"
                        style="@style/WZLCheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="随意点还车"
                        android:textColor="@color/C5"/>
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/back_layout"
                style="@style/padding_15_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/C1">

                <TextView
                    android:id="@+id/state_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/billing_car_03"
                    android:drawablePadding="5dp"
                    android:text="还车位置"
                    android:textColor="@color/C5"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/position_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/state_tv"
                    tools:text="二汽"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/detail_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/position_tv"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    tools:text="二汽"
                    android:textColor="@color/C5"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/my_coupon_back"
                    />

                <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/detail_tv"
                    android:layout_marginTop="10dp"
                    android:background="@color/C3"/>

                <LinearLayout
                    android:id="@+id/lead_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:layout_below="@id/divider"
                    android:layout_centerHorizontal="true"
                    android:gravity="center">
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/billing_car_04"
                        android:drawablePadding="5dp"

                        android:text="导航至停车点"/>
                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView8"
                        style="@style/padding_15_10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="1dp"
                        android:layout_weight="1"
                        android:background="@color/C1"
                        android:drawablePadding="5dp"
                        android:drawableTop="@drawable/billing_car_05"
                        android:gravity="center"
                        android:text="一键开门"
                        android:textColor="@color/C5"/>

                    <TextView
                        style="@style/padding_15_10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="1dp"
                        android:layout_weight="1"
                        android:background="@color/C1"
                        android:drawablePadding="5dp"
                        android:drawableTop="@drawable/billing_car_06"
                        android:gravity="center"
                        android:text="一键锁门"
                        android:textColor="@color/C5"/>

                    <TextView
                        style="@style/padding_15_10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/C1"
                        android:drawablePadding="5dp"
                        android:drawableTop="@drawable/billing_car_07"
                        android:gravity="center"
                        android:text="驾驶指南"
                        android:textColor="@color/C5"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/padding_15_10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="1dp"
                        android:layout_weight="1"
                        android:background="@color/C1"
                        android:drawablePadding="5dp"
                        android:drawableTop="@drawable/billing_car_08"
                        android:gravity="center"
                        android:text="声音寻车"
                        android:textColor="@color/C5"/>

                    <TextView
                        style="@style/padding_15_10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="1dp"
                        android:layout_weight="1"
                        android:background="@color/C1"
                        android:drawablePadding="5dp"
                        android:drawableTop="@drawable/billing_car_09"
                        android:gravity="center"
                        android:text="定位寻车"
                        android:textColor="@color/C5"/>

                    <TextView
                        style="@style/padding_15_10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/C1"
                        android:drawablePadding="5dp"
                        android:drawableTop="@drawable/billing_car_10"
                        android:gravity="center"
                        android:text="充电"
                        android:textColor="@color/C5"/>
                </LinearLayout>
            </LinearLayout>


            <com.rey.material.widget.Button
                android:id="@+id/ok_bt"
                style="@style/Material.Drawable.Ripple.Wave.Light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="30dip"
                android:layout_marginRight="30dip"
                android:layout_marginTop="15dp"
                android:background="@color/Car2"
                android:text="确认还车"
                android:textColor="@color/C1"
                android:textSize="16sp"
                app:rd_enable="true"/>
        </LinearLayout>
    </com.wuzhanglong.library.view.ReboundScrollView>
</android.support.constraint.ConstraintLayout>
