<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_main_message_04"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="53dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="当月合计（万元）"
                    android:textColor="#e4e4e4"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/inout_tv"
                    style="@style/F2C1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1,200"
                    android:textSize="18sp" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/dotted_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="月均（万元）"
                    android:textColor="#e4e4e4"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/out_tv"
                    style="@style/F2C1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1,200"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tv_location_father_ly"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/linearystork_bule"
        android:gravity="center" >

        <TextView
            android:id="@+id/detailinfo"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/corners_tab_left_select"
            android:ellipsize="end"
            android:gravity="center"
            android:maxWidth="150dp"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:text="费种分布"
            android:textColor="@color/white" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="fill_parent"
            android:background="#dddddd" />

        <TextView
            android:id="@+id/trade_dongtai"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/corners_tab_right_normal"
            android:ellipsize="end"
            android:gravity="center"
            android:maxWidth="150dp"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:text="部门分布"
            android:textColor="@color/C5" />
    </LinearLayout>

  <FrameLayout
        android:id="@+id/id_content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >
    </FrameLayout>
</LinearLayout>