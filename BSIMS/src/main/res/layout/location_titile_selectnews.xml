<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/comm_head_layout"
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:background="@drawable/bg_main_message_04"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/img_head_backnew"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:drawableLeft="@drawable/ic_head_back"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:text="返回"
        android:textColor="@color/C1" />

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        android:background="@drawable/linearystork" >

        <TextView
            android:id="@+id/detailinfo"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_weight="1" 
            android:background="@drawable/corners_tab_left_select1"
            android:ellipsize="end"
            android:gravity="center"
            android:maxWidth="150dp"
            android:padding="1dp"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:text="地图"
            android:textColor="@color/bule_go"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/shoukuan_record"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/corners_tab_right_normal1"
            android:ellipsize="end"
            android:gravity="center"
            android:maxWidth="150dp"
            android:padding="1dp"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:text="人员"
            android:textColor="@color/C1"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_comm_head_rightnew"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:gravity="center"
        android:padding="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="2014-15-05"
        android:textColor="#FFFFFF"
        android:textSize="14sp" />

</RelativeLayout>