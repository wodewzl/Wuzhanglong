<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/ten" >

        <ImageView
            android:id="@+id/img_taskeventDetails_userheadPic"
            android:layout_width="@dimen/fifty"
            android:layout_height="@dimen/fifty"
            android:src="@drawable/ic_default_portrait_s" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ten"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/txt_taskeventDetails_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="name"
                    android:textColor="@color/comm_txt_listview_black" />

                <TextView
                    android:id="@+id/txt_taskeventDetails_department"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten"
                    android:text=""
                    android:textColor="@color/comm_txt_content_gray" />
            </LinearLayout>

            <ImageView
                android:id="@+id/img_taskeventDetails_userTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_common_usertag" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.8dp"
        android:background="@color/line" />

</LinearLayout>