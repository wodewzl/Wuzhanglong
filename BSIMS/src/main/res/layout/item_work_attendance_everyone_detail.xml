<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- android:background="@color/white" -->

    <View
        android:layout_width="fill_parent"
        android:layout_height="4dp"
        />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dip"
        android:background="@color/white"
        android:orientation="horizontal" >

        <com.bs.bsims.view.BSCircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto "
            android:id="@+id/work_attendance_detail_top_head_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/item_work_attendance_everyone_detail_img" />

        <TextView
            android:id="@+id/item_work_attendance_everyone_detail_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="瞄小姐"
            android:textColor="#333333"
            android:textSize="14dp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="4dp"
        />

</LinearLayout>