            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/gz_peixun6"
            android:text="调岗记录" />

        <TextView
            android:id="@+id/worktransfer"
