<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/tv_location_father_ly"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/linearystork_bule"
        android:gravity="center" >

        <TextView
            android:id="@+id/detailinfo"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/corners_tab_left_select"
            android:ellipsize="end"
            android:gravity="center"
            android:maxWidth="150dp"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:text="初次体验"
            android:textColor="@color/white" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="fill_parent"
            android:background="#dddddd" />

        <TextView
            android:id="@+id/trade_dongtai"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/corners_tab_right_normal"
            android:ellipsize="end"
            android:gravity="center"
            android:maxWidth="150dp"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:text="已有账号"
            android:textColor="@color/bule_go" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/text_all"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_margin="15dp"
        android:background="@drawable/linearystork1"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="输入手机号："
                android:textColor="@color/C5" />

            <EditText
                android:id="@+id/user_phone"
                style="@style/F3C4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="#ffff"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="left|center_vertical"
                android:maxLength="15"
                android:maxWidth="160dp"
                android:phoneNumber="true"
                android:singleLine="true" />
        </LinearLayout>

        <View
            android:id="@+id/view"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/app_bg" />

        <LinearLayout
            android:id="@+id/allcode_ly"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="验证码："
                android:textColor="@color/C5" />

            <EditText
                android:id="@+id/user_code"
                style="@style/F3C4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="#ffff"
                android:gravity="left|center_vertical"
                android:maxLength="15"
                android:maxWidth="160dp"
                android:phoneNumber="true"
                android:singleLine="true" />

            <TextView
                android:id="@+id/no_read_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="@drawable/frame_shixing_yellow"
                android:gravity="center"
                android:padding="5dp"
                android:text="获取验证码"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/is_phone"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_margin="15dp"
        android:background="@drawable/linearystork1"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:text="输入手机号："
            android:textColor="@color/C5" />

        <EditText
            android:id="@+id/is_phone_text"
            style="@style/F3C4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="#ffff"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="left|center_vertical"
            android:maxLength="15"
            android:maxWidth="160dp"
            android:phoneNumber="true"
            android:singleLine="true" />
    </LinearLayout>

    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/corners_blue"
        android:text="开始体验"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="\t\t北企星体验账号,是为了让你了解产品功能,对产品有一个直观的认识"
        android:textColor="@color/C6"
        android:textSize="16sp" />

</LinearLayout>