<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:chatutils="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <com.bs.bsims.chatutils.MessagePopView
        android:id="@+id/msg_pop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        chatutils:devideColor="#4E4E4E"
        chatutils:devideWidth="1dp"
        chatutils:focusColor="#444444"
        chatutils:normalColor="#222222"
        chatutils:operateStyle="copyAnddelete"
        chatutils:paddingL="10dp"
        chatutils:textColor="#F7F7F7"
        chatutils:textSize="14sp"
        chatutils:trangleH="8dp" />

</RelativeLayout>