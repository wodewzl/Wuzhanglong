<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical" >

    <include
        layout="@layout/part_comm_head"
        android:visibility="gone" />

    <com.bs.bsims.view.BSTaskSsLineChart4Indicator
        android:id="@+id/top_task_ss_linechart_4indicator"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
    </com.bs.bsims.view.BSTaskSsLineChart4Indicator>

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager_task_ss_linechart_4indicator"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1.0" />

    <LinearLayout
        android:id="@+id/loading_layout_task_ss_linechart_4indicator"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/loading_task_ss_linechart_4indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="正在加载···"
            android:textColor="@color/blug_bg"
            android:visibility="visible" />
    </LinearLayout>

</LinearLayout>