<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical" >

            <LinearLayout
                android:id="@+id/usercodetitle"
                android:layout_width="110dp"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/corners_blue"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <!-- calender_icon  android:background="@drawable/corners_blue" btn_sign_in_list_head_action  ic_main_message_05 genera_07_selected -->

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:padding="3dp"
                    android:src="@drawable/da_alltime" />

                <TextView
                    android:id="@+id/userpaytime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2015-04-25"
                    android:textColor="@color/white" />
            </LinearLayout>

            <ImageView
                android:id="@+id/userpaytype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:background="@drawable/da_xinzizhang" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray_bg_01" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/pay1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="降薪前："
                android:textColor="@color/gray_bg"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/pay1"
                android:text="4500"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/news1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/news"
                android:text="调薪后："
                android:textColor="@color/gray_bg"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:text="5000"
                android:textSize="15sp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>