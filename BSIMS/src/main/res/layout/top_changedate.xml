<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dip"
    android:background="@color/white"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/top_changedate_last"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/kcalendar_bt_calendar_last"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/corners_blue"
        android:gravity="center"
        android:orientation="horizontal" >

        <!-- calender_icon  android:background="@drawable/corners_blue" btn_sign_in_list_head_action  ic_main_message_05 genera_07_selected -->

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/genera_07_selected" />

        <TextView
            android:id="@+id/top_changedate_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2015-06"
            android:textColor="@color/white" />
    </LinearLayout>

    <ImageView
        android:id="@+id/top_changedate_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:background="@drawable/kcalendar_bt_calendar_next"
        android:gravity="center"
        android:padding="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

</RelativeLayout>