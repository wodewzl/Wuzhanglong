<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/pinned_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/C3"
        android:paddingLeft="10dp"
        android:paddingTop="10dp" >

        <TextView
            android:id="@+id/time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/footer_time"
            android:paddingBottom="7dp"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:paddingTop="7dp"
            android:text="2015-12-26"
            android:textColor="@color/white" >
        </TextView>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:background="@color/C1"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:orientation="vertical"
                android:paddingTop="5dp" >

                <TextView
                    android:id="@+id/name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="吴章龙" />

                <TextView
                    android:id="@+id/depart_tv"
                    style="@style/F4C6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/name_tv"
                    android:layout_marginTop="2dp"
                    android:text="市场部" />

                <TextView
                    android:id="@+id/type_tv"
                    style="@style/F4C1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="8dp"
                    android:paddingBottom="2dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="2dp"
                    android:text="日报" />

                <TextView
                    android:id="@+id/type_visit"
                    style="@style/F4C5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="8dp"
                    android:paddingBottom="2dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="2dp"
                    android:text="上门拜访"
                    android:textColor="@color/white" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/content_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:animateLayoutChanges="true"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/title01"
                    style="@style/F3C6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="今日工作总结今日工作总结今日工作总结今日工作总结今日工作总结今日工作总结今日工作总结今日工作总结今日工作总结今日工作总结今日工作总结今日工作总结今日工作总结今日工作总结今日工作总结今日工作总结今日工作总结今日工作总结今日工作总结今日工作总结今日工作总结今日工作总结今日工作总结今日工作总结今日工作总结今日工作总结今日工作总结今日工作总结今日工作总结今日工作总结今日工作总结今日工作总结今日工作总结今日工作总结今日工作总结今日工作总结今日工作总结今日工作总结今日工作总结" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/C2" />

            <LinearLayout
                android:id="@+id/r1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/vistor_cname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@drawable/crm_client_totalpeople"
                    android:drawablePadding="5dp"
                    android:ellipsize="end"
                    android:gravity="left|center"
                    android:maxLines="3"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text="梁汉文1111111111111111111111111111111111111111111111111111"
                    android:textColor="@color/C5" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/r1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="horizontal" >

                <TextView
                    style="@style/text_midlle_eclipse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:drawableLeft="@drawable/crm_client_contacts"
                    android:drawablePadding="5dp"
                    android:padding="5dp"
                    android:text="拜访人:"
                    android:textColor="@color/C5" />

                <TextView
                    android:id="@+id/vistor_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:ellipsize="end"
                    android:gravity="left|center"
                    android:maxLines="3"
                    android:singleLine="true"
                    android:text="梁汉文"
                    android:textColor="#00B5E8" />
            </LinearLayout>

            <TextView
                android:id="@+id/link_address_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/linearystork_gray"
                android:drawableLeft="@drawable/crm_client_address"
                android:drawablePadding="5dp"
                android:ellipsize="end"
                android:padding="5dp"
                android:singleLine="true"
                android:text="我我爱你我爱你我爱你我爱你"
                android:textColor="@color/C6"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/C8"
                android:orientation="horizontal" >

                <TextView
                    style="@style/F4C5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="10dp"
                    android:text="发布时间：" />

                <TextView
                    android:id="@+id/publish_time_tv"
                    style="@style/F4C5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2016-03-11" />

                <TextView
                    android:id="@+id/replay_tv"
                    style="@style/F4C5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/message"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:text="15"
                    android:textColor="@color/C7" />

                <LinearLayout
                    android:id="@+id/aggree_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:paddingRight="15dp" >

                    <ImageView
                        android:id="@+id/img_agree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/agree" />

                    <TextView
                        android:id="@+id/praise_tv"
                        style="@style/F4C5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="赞"
                        android:textColor="@color/C7" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/item_layout"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_centerInParent="true"
                android:src="@drawable/bg_circle_white" />

            <com.bs.bsims.view.BSCircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto "
                android:id="@+id/head_icon"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_centerInParent="true"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="1dp"
                android:src="@drawable/ic_default_portrait_s" />
        </RelativeLayout>
    </FrameLayout>

</LinearLayout>