<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/gaode_loaction_side_map_info"
    android:orientation="horizontal"
  >

    <LinearLayout
        android:id="@+id/location_ly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/location_adressinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:maxWidth="250dp"
            android:paddingTop="10dp"
            android:text="11111111111111111111111111111111"
            android:textColor="@color/gray_bg"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/location_timeinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
             android:maxWidth="250dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="11111111111111111111111111111111"
            android:textColor="@color/gray_bg"
            android:textSize="13sp" />
    </LinearLayout>

</LinearLayout>