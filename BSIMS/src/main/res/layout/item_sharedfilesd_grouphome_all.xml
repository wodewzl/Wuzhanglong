<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/img_item_sharedfilesd_grouphome_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/ic_upload_folder"
                android:visibility="gone" />

            <com.bs.bsims.view.BSImgViewFliePoint
                android:id="@+id/point_img_item_sharedfilesd_grouphome_all"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@id/img_item_sharedfilesd_grouphome_all"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
                android:src="@drawable/file_list_dparment" />

            <TextView
                android:id="@+id/txt_last_item_sharedfilesd_grouphome_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/point_img_item_sharedfilesd_grouphome_all"
                android:layout_centerHorizontal="true"
                android:text="肖方"
                android:textColor="@color/title_text"
                android:visibility="gone" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ly_item_sharedfilesd_grouphome_all"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/txt_item_sharedfilesd_grouphome_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="肖方"
                    android:textColor="@color/title_text" />

                <TextView
                    android:id="@+id/txt_item_sharedfilesd_grouphome_all_color"
                    android:layout_width="wrap_content"
                    android:layout_height="3dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/txt_item_sharedfilesd_grouphome_all"
                    android:background="@drawable/item_taskeventlistadapter_progressdrawable_front"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/txt_item_sharedfilesd_grouphome_all_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/txt_item_sharedfilesd_grouphome_all_color"
                    android:text="10"
                    android:textColor="@color/title_text"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/txt_last_item_sharedfilesd_grouphome_all_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="肖方"
                    android:textColor="@color/gray_bg"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/txt_last_item_sharedfilesd_grouphome_all_color"
                    android:layout_width="wrap_content"
                    android:layout_height="3dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/txt_last_item_sharedfilesd_grouphome_all_month"
                    android:background="@drawable/item_taskeventlistadapter_progressdrawable_front"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/txt_last_item_sharedfilesd_grouphome_all_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/txt_last_item_sharedfilesd_grouphome_all_color"
                    android:text="10"
                    android:textColor="@color/title_text"
                    android:visibility="gone" />
            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/item_sharedfilesd_grouphome_more_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/common_ic_arrow_right"
            android:clickable="true" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.8dp"
        android:layout_marginLeft="50dp"
        android:background="@color/line" />

    <LinearLayout
        android:id="@+id/tem_sharedfilesd_grouphome_more_ly"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/line"
        android:orientation="horizontal"
        android:visibility="gone" >

        <LinearLayout
            android:id="@+id/tem_sharedfilesd_grouphome_more_down_ly"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/work_03" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textColor="@color/title_text" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tem_sharedfilesd_grouphome_more_collection_ly"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/yus_btn_check_buttonless_on" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收藏"
                android:textColor="@color/title_text" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>