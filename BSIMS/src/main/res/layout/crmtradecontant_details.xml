<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="fill"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/C3"
                android:orientation="horizontal"
                android:padding="15dp" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="3dp"
                    android:singleLine="true"
                    android:src="@drawable/crm_client_name" />

                <TextView
                    android:id="@+id/trande_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="中信电脑上门服务中信电脑上门服务中信电脑上门服务中信电脑上门服务"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/C1"
                android:orientation="horizontal"
                android:padding="15dp" >

                <TextView
                    android:id="@+id/product"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/crm_bussines_detail_prod"
                    android:drawablePadding="10dp"
                    android:text="合同金额"
                    android:textColor="@color/C6" />

                <TextView
                    android:id="@+id/trande_money"
                    style="@style/F3C9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥ 1000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/C18"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="10dp" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/crm_contant_starttime" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/trande_starttime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2015-11-6" />

                        <TextView
                            style="@style/F4C6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="开始日期" />
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/crm_trant_arrow" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="10dp" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/crm_contant_endtime" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/trande_endtime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2015-11-6" />

                        <TextView
                            style="@style/F4C6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="结束日期" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="15dp" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/crm_contant_sing"
                        android:drawablePadding="10dp"
                        android:text="签约日期"
                        android:textColor="@color/C6" />

                    <TextView
                        android:id="@+id/signing_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="2015-11-6" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/app_bg" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/crm_contant_back"
                        android:drawablePadding="10dp"
                        android:text="销售返点"
                        android:textColor="@color/C6" />

                    <TextView
                        android:id="@+id/sale_back"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:hint="销售返点" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/app_bg" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/crm_trade_type"
                        android:drawablePadding="10dp"
                        android:text="合同类型"
                        android:textColor="@color/C6" />

                    <TextView
                        android:id="@+id/trade_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:hint="合同类型" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/app_bg" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="15dp" >

                    <ImageView
                        android:id="@+id/product_info_name1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:layout_marginRight="10dp"
                        android:singleLine="true"
                        android:src="@drawable/crm_remark" />

                    <TextView
                        android:id="@+id/remark"
                        style="@style/F3C5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/C1"
                        android:hint="备注" />
                </LinearLayout>

                <com.bs.bsims.view.BSGridView
                    android:id="@+id/show_images"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:listSelector="@android:color/transparent"
                    android:numColumns="3" />
            </LinearLayout>

            <TextView
                style="@style/layout_padding_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="合同负责人"
                android:textColor="@color/C5" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <com.bs.bsims.view.BSCircleImageView
                        android:id="@+id/basicinfoheadpic"
                        android:layout_width="50dip"
                        android:layout_height="50dip"
                        android:background="@drawable/ic_default_portrait_s" />

                    <TextView
                        android:id="@+id/bussnies_person_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:text="张三"
                        android:textColor="@color/C5" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/add_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="创建日期：2015.90.17"
                        android:textColor="@color/C5" />

                    <TextView
                        android:id="@+id/bussnies_person_dpname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:gravity="right"
                        android:text="创建日期：2015.90.17"
                        android:textColor="@color/C5" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/approval_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="审核意见"
                android:textColor="@color/C5"
                android:visibility="gone" />

            <include
                android:id="@+id/approval_layout"
                layout="@layout/approval_idea"
                android:visibility="gone" />

            <TextView
                android:id="@+id/head_momtv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:padding="10dp"
                android:singleLine="true"
                android:text="相关人"
                android:textColor="@color/gray_bg"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/inform_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingTop="15dp"
                android:visibility="gone" >

                <GridView
                    android:id="@+id/send_second_person_gv"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:listSelector="@android:color/transparent"
                    android:numColumns="5"
                    android:verticalSpacing="10dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/payment_plan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="回款计划"
                android:textColor="@color/gray_bg"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/payment_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone" >
            </LinearLayout>
            
                     <TextView
                android:id="@+id/approval_idea_tv"
                style="@style/layout_padding_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="审批人"
                android:visibility="gone" />

            <com.bs.bsims.view.BSListView
                android:id="@+id/list_view"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:divider="@null" />

            <LinearLayout
                android:id="@+id/bottom_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#FFF3F3F3"
                android:orientation="horizontal"
                android:padding="10dp"
                android:visibility="gone" >

                <Button
                    android:id="@+id/unapproval_bt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/corners_blue"
                    android:text="否定"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/approval_bt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/corners_yellow"
                    android:text="确定"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/add_panned_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:visibility="gone" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableLeft="@drawable/crm_add_more"
                    android:drawablePadding="15dp"
                    android:padding="15dp"
                    android:text="添加更多回款计划"
                    android:textColor="@color/C5" />
            </LinearLayout>

   
        </LinearLayout>
    </ScrollView>

</LinearLayout>