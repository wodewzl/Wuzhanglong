<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_weight="8" >

            <ImageView
                android:id="@+id/sign_work_state1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_sgin_in_list_head_point" />

            <TextView
                android:id="@+id/sign_work_state"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:textColor="@color/white" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="-15dp"
            android:layout_marginTop="5dp"
            android:layout_weight="2"
            android:background="@drawable/bg_sgin_in_list_head_location_des"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:paddingRight="5dp" >

                <TextView
                    android:id="@+id/txt_item_sgin_in_desa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/item_sgin_in_list_ic_late"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="2"
                    android:paddingLeft="15dp" />

                <TextView
                    android:id="@+id/txt_item_sgin_down_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/C6" />
            </LinearLayout>

            <View
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:visibility="gone"
                android:id="@+id/view_sign_view"
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginTop="10dp"
                android:background="@color/C2" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                >

                <ImageView
                    android:layout_marginTop="2dp"
                    android:visibility="gone"
                    android:id="@+id/txt_signin_map_local_des_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:src="@drawable/sign_address"
                     />

                <TextView
                    android:layout_marginLeft="2dp"
                    android:id="@+id/txt_signin_map_local_des"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="1111111111111111111111111111111"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:drawablePadding="2dp"
                android:id="@+id/txt_signin_map_locastate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/sign_new_ycaddress"
                android:gravity="center_vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:text="位置异常"
                android:textColor="@color/red"
                android:visibility="gone" />

            <LinearLayout
                    android:id="@+id/txt_item_sgin_remark_ly"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="vertical"
                android:visibility="gone" >

                
                
                
            <View
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/bg_activity_color" />

                <TextView
                    android:id="@+id/txt_item_sgin_remark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingTop="10dp"
                    android:textColor="@color/C6" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/txt_top_item_monthy"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="visible" >

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/txt_sign_in_list_count"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/item_normal"
                android:gravity="center"
                android:text="本月打卡记录"
                android:textAlignment="gravity"
                android:textColor="#000000"
                android:textSize="16sp" />

            <RelativeLayout
                android:id="@+id/rl_item_sign_month"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/bg_sign_in_list_head_month" >

                <TextView
                    android:id="@+id/txt_sign_in_list_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txt_sign_in_list_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="15dp"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />
            </RelativeLayout>
        </FrameLayout>
    </RelativeLayout>

</LinearLayout>