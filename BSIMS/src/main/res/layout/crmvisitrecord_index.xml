<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_deep_layout"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal" >

        <com.bs.bsims.view.BSIndexEditText
            android:id="@+id/edit_single_search1"
            style="@style/F4C5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/corners_white"
            android:drawableLeft="@drawable/ic_contacts_search_image"
            android:drawablePadding="4dp"
            android:hint="请输入姓名或公司名字"
            android:imeOptions="actionSearch"
            android:padding="5dp"
            android:singleLine="true" />

        <TextView
            android:id="@+id/no_read_tv"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@drawable/frame_shixing_write"
            android:gravity="center"
            android:text="未读"
            android:textColor="@color/C7"
            android:visibility="gone" />
    </LinearLayout>

 
    <LinearLayout
        android:id="@+id/date_task_changedate_select_ly"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone" >
    </LinearLayout>

    <com.bs.bsims.view.PinnedSectionListView
        android:id="@+id/refresh_listview"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:background="@color/C3"
        android:listSelector="@color/transparent"
        android:divider="@null"
        android:scrollbars="none"
        android:visibility="visible" />

</LinearLayout>