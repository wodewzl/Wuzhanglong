<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="#40000000"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:id="@+id/ext_pop_statistics_title_layout_01"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:orientation="vertical" >

                <ListView
                    android:id="@+id/ext_pop_statistics_lv_01"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:listSelector="@drawable/item_selecttor"
                    android:scrollbars="none" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ext_pop_statistics_title_layout_02"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:background="@color/gray_bg_01"
                android:orientation="vertical" >

                <ListView
                    android:id="@+id/ext_pop_statistics_lv_02"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:listSelector="@drawable/item_selecttor"
                    android:scrollbars="none" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ext_pop_statistics_title_layout_03"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ListView
                    android:id="@+id/ext_pop_statistics_lv_03"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:listSelector="@drawable/item_selecttor"
                    android:scrollbars="none" />
            </LinearLayout>
        </FrameLayout>

        <Button
            android:id="@+id/ok_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blug_bg"
            android:padding="10dp"
            android:text="@string/ok"
            android:textColor="@color/white"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>