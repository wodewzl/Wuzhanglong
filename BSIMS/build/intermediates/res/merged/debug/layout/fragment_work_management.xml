<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg_01"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/comm_head_layout"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_main_message_04"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/txt_comm_head_activityNamefather"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true" >

            <TextView
                android:id="@+id/txt_comm_head_activityName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/tab_work"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@null"
                android:src="@drawable/app_makertlogo"
                android:visibility="gone" >
            </ImageButton>
        </LinearLayout>

        <TextView
            android:id="@+id/txt_comm_head_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:gravity="center"
            android:padding="15dp"
            android:drawableRight="@drawable/app_makertlogo"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
    </RelativeLayout>

    <com.bs.bsims.view.ReboundScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginTop="1dp"
        android:layout_weight="1"
        android:background="@color/gray_bg_01"
        android:fadingEdge="none"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/root_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/C1"
                android:orientation="vertical" >
            </LinearLayout>
        </LinearLayout>
    </com.bs.bsims.view.ReboundScrollView>

    <TextView
        android:id="@+id/no_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="请联系管理员添加自己的菜单"
        android:textColor="@color/C7"
        android:visibility="gone" />

</LinearLayout>