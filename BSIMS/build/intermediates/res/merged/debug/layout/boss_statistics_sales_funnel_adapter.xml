<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingTop="10dp" 
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/isread"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:background="@drawable/bg_circle_noread"
                android:visibility="gone" />

            <TextView
                android:id="@+id/bussines_name_tv"
                style="@style/text_s14_end_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="中信电脑上门服务1111111111111111111111111111111111111111111111111111111111111" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/client_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal" >

            <TextView
                style="@style/F4C6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="客户：" />

            <TextView
                android:id="@+id/company_name_tv"
                style="@style/F4C6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="北盛科技有限公司" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/C3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#F8F8F8"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp" >

            <TextView
                android:id="@+id/add_time_tv"
                style="@style/F4C5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/crm_contant_endtime"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:text="2015-11-5" />

            <TextView
                android:id="@+id/client_name_tv"
                style="@style/F4C5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/crm_client_contacts"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:text="李克强" />

            <TextView
                android:id="@+id/money_tv"
                style="@style/F4C5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/crm_client_money_black"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:text="2000"
                android:textColor="@color/C9" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone" >

            <ProgressBar
                android:id="@+id/item_taskeventlistadapter_seekbar"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="150dip"
                android:layout_height="8dip"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="12dp"
                android:indeterminate="false"
                android:progressDrawable="@drawable/item_taskeventlistadapter_progressdrawable" />

            <TextView
                android:id="@+id/item_taskeventlistadapter_content_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/item_taskeventlistadapter_seekbar"
                android:text="40%"
                android:textColor="#00AAFE" />

            <TextView
                android:id="@+id/work_pay_money1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@+id/work_pay_money"
                android:text="应收款："
                android:textColor="@color/gray_bg"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/work_pay_money"
                style="@style/text_midlle_eclipse"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:maxLength="20"
                android:text="实收款：$11111111"
                android:textSize="14sp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>