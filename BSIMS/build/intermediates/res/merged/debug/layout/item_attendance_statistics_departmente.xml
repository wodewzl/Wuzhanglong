<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/C1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/item_attendance_ss_departmente_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:background="@drawable/corners_blue"
            android:paddingBottom="2dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="2dp"
            android:text="12"
            android:textColor="@color/C1" />

        <TextView
            android:id="@+id/item_attendance_ss_departmente_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/item_attendance_ss_departmente_rank"
            android:paddingTop="2dp"
            android:text="刘德华" />

        <TextView
            android:id="@+id/item_attendance_ss_departmente_type"
            style="@style/F3C5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingTop="2dp"
            android:text="请假"
            android:visibility="gone" />

        <TextView
            android:id="@+id/item_attendance_ss_departmente_ic_arrow_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableRight="@drawable/common_ic_arrow_right"
            android:gravity="center"
            android:visibility="gone" />

        <TextView
            android:id="@+id/item_attendance_ss_departmente_sort"
            style="@style/F3C5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:layout_toLeftOf="@id/item_attendance_ss_departmente_ic_arrow_right"
            android:paddingRight="20dp"
            android:paddingTop="2dp"
            android:text="12" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignLeft="@id/item_attendance_ss_departmente_name"
            android:layout_alignParentBottom="true"
            android:background="@color/C3" />
    </RelativeLayout>

</LinearLayout>