<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/Wholefile"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/Wholefile1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/img_item_sharedfilesd_grouphome_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/ic_upload_folder"
                        android:visibility="visible" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ly_item_sharedfilesd_grouphome_all"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/txt_item_sharedfilesd_grouphome_all"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="肖方"
                            android:textColor="@color/title_text" />

                        <TextView
                            android:id="@+id/txt_item_sharedfilesd_grouphome_all_color"
                            android:layout_width="wrap_content"
                            android:layout_height="3dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@id/txt_item_sharedfilesd_grouphome_all"
                            android:background="@drawable/item_taskeventlistadapter_progressdrawable_front"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/txt_item_sharedfilesd_grouphome_all_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@id/txt_item_sharedfilesd_grouphome_all_color"
                            android:text="10"
                            android:textColor="@color/title_text"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/txt_last_item_sharedfilesd_grouphome_all_month"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="肖方"
                            android:textColor="@color/C14"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/txt_last_item_sharedfilesd_grouphome_all_color"
                            android:layout_width="wrap_content"
                            android:layout_height="3dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@id/txt_last_item_sharedfilesd_grouphome_all_month"
                            android:background="@drawable/item_taskeventlistadapter_progressdrawable_front"
                            android:gravity="center"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/txt_last_item_sharedfilesd_grouphome_all_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@id/txt_last_item_sharedfilesd_grouphome_all_color"
                            android:text="10"
                            android:textColor="@color/title_text"
                            android:textSize="10sp"
                            android:visibility="gone" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/filedownprogress"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/item_sharedfilesd_grouphome_more_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="67.0k" />

                    <ImageView
                        android:id="@+id/item_sharedfilesd_grouphome_more_img"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/filedonw_arrowdown"
                        android:clickable="true" />

                    <ImageView
                        android:id="@+id/item_sharedfilesd_grouphome_more_img1"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/filedown_stop"
                        android:clickable="true"
                        android:visibility="gone" />

                    <com.bs.bsims.view.BSCirleDwLoadProgrossView
                        android:id="@+id/roundProgressBar5"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:layout_marginLeft="60dp"
                android:background="@color/line" />

            <LinearLayout
                android:id="@+id/tem_sharedfilesd_grouphome_more_ly"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/darkgray"
                android:orientation="horizontal"
                android:padding="10dp"
                android:visibility="gone" >

                <LinearLayout
                    android:id="@+id/tem_sharedfilesd_grouphome_more_down_ly"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/filedonw_donw" />

                    <TextView
                        android:id="@+id/filedown_stoporcontinue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="下载"
                        android:textColor="@color/title_text" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tem_sharedfilesd_grouphome_more_down_ly1"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/filedown_eyesget" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="查看"
                        android:textColor="@color/title_text" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tem_sharedfilesd_grouphome_more_collection_ly"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/filedonw_like" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="收藏"
                        android:textColor="@color/title_text" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tem_sharedfilesd_grouphome_more_collection_lying"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/files_downing" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="取消下载"
                        android:textColor="@color/title_text" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tem_sharedfilesd_grouphome_more_collection_ly2"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/filedonw_likeout" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已收藏" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tem_sharedfilesd_grouphome_more_collection_ly1"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/filedonw_likeout" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="取消收藏"
                        android:textColor="@color/title_text" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <ImageButton
            android:id="@+id/item_delete"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:background="#FF0000"
            android:gravity="center"
            android:src="@drawable/del" />
    </LinearLayout>

</HorizontalScrollView> <!-- </LinearLayout> -->
