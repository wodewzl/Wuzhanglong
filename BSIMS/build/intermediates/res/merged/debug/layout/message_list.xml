<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/type_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/C1"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/layout_01"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal" >

            <TextView
                android:id="@+id/text_01"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="与我相关"
                android:textColor="@color/C7" />

            <TextView
                android:id="@+id/text_01_count"
                style="@style/F4C1"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/text_01"
                android:gravity="center"
                android:text="1" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_02"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal" >

            <TextView
                android:id="@+id/text_02"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="全公司" />

            <TextView
                android:id="@+id/text_02_count"
                style="@style/F4C1"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/text_02"
                android:gravity="center"
                android:text="16" />
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/line_img"
        android:layout_width="wrap_content"
        android:layout_height="2dip"
        android:background="@color/C7" />

    <LinearLayout
        android:id="@+id/fragment_content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
    </LinearLayout>

</LinearLayout>