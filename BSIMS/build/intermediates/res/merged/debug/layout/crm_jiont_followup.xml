<?xml version="1.0" encoding="utf-8"?>

<!-- CRM联合跟进人 -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:overScrollMode="never"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/transfer_tv"
            style="@style/parent_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="负责人"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/transfer_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:visibility="visible" >

            <LinearLayout
                android:id="@+id/fuzeren_father_manger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/relative_portrait_zhe"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true" >

                    <com.bs.bsims.view.BSCircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto "
                        android:id="@+id/image_taskevent_releasetask_fuzeren"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/add_persion" />

                    <ImageView
                        android:id="@+id/bussines_ze"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_taskevent_zhe"
                        android:visibility="gone" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/txt_taskevent_releasetask_fuzeren"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="添加"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/relative_portrait_zhe"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true" >

                    <com.bs.bsims.view.BSCircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto "
                        android:id="@+id/image_taskevent_releasetask_fuzeren_change"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/add_persion" />

                    <ImageView
                        android:id="@+id/bussines_ze"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_taskevent_zhe"
                        android:visibility="gone" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="变更负责人"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/approver_tv"
            style="@style/parent_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="联合跟进人"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/approver_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:visibility="visible" >

            <com.bs.bsims.view.BSGridView
                android:id="@+id/approver_gv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:listSelector="@android:color/transparent"
                android:numColumns="5"
                android:verticalSpacing="10dp" />

            <TextView
                android:id="@+id/approver_go_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/common_ic_arrow_right"
                android:textSize="20dp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>