<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#F3F3F3"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/catalog"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:paddingBottom="5dip"
            android:paddingLeft="5dip"
            android:paddingTop="5dip"
            android:text="A"
            android:textColor="#7D909D"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/item_layout"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/item_selecttor"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/no_head_icon"
                style="@style/F3C1"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_marginLeft="15dp"
                android:text="dd"
                android:gravity="center"
                android:visibility="gone" />

            <com.bs.bsims.view.BSCircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto "
                android:id="@+id/head_icon_s"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_marginLeft="15dp"
                android:background="@drawable/ic_default_portrait_s"
                android:transitionName="head_icon" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingRight="10dp" >

                <TextView
                    android:id="@+id/name"
                    style="@style/F3C4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="鎴戞槸璋�" />

                <TextView
                    android:id="@+id/detail"
                    style="@style/F4C6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/name"
                    android:layout_marginTop="5dp"
                    android:text="鎴戞槸绁�" />

                <TextView
                    android:id="@+id/department"
                    style="@style/F5C6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="15dp"
                    android:text="姝﹀綋娲�" />

                <TextView
                    android:id="@+id/group"
                    style="@style/F4C6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/department"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5dp"
                    android:text="鎺岄棬浜�" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>