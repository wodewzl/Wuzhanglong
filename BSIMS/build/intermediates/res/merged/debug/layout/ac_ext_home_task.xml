<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg_01"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/record_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/footer_time"
        android:paddingBottom="7dp"
        android:paddingLeft="35dp"
        android:paddingRight="35dp"
        android:paddingTop="7dp"
        android:text="2015-12-26"
        android:textColor="@color/white"
        android:visibility="visible" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent" >

        <View
            android:layout_width="1dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:background="@color/fuxk_base_divide_line_color"
            android:paddingLeft="25dp"
            android:visibility="visible" />

        <com.bs.bsims.view.BSRefreshListView
            android:id="@+id/listView_tasklist_add"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:divider="@null"
            android:listSelector="@color/transparent"
            android:overScrollMode="never"
            android:scrollbars="none" />
    </FrameLayout>

</LinearLayout>