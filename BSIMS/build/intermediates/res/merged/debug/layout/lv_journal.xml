<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg_01" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="10dp" >

        <com.bs.bsims.view.BSCircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto "
            android:id="@+id/journal_head_icon"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:background="@drawable/ic_default_portrait_s" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="10dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/name_tv"
                    style="@style/F3C4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="肖方" />

                <TextView
                    android:id="@+id/state_tv"
                    style="@style/style02_01"
                    android:layout_width="50dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/corners_notice_unread"
                    android:gravity="center"
                    android:text="已读"
                    android:textColor="@color/white"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/time_tv"
                    style="@style/style01"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:text="2015-4-26 18:53" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/content_tv"
                    style="@style/F4C6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="肖方是顶顶顶顶顶" />

                <TextView
                    android:id="@+id/c_title"
                    style="@style/F4C6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="抄送人：" />

                <TextView
                    android:id="@+id/c_name"
                    style="@style/F5C5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="2dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingTop="2dp"
                    android:background="@drawable/frame_10_gray_style"
                    android:text="刘洪涛" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>