<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" >

        <TextView
            android:id="@+id/send_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/chat_image_normal"
            android:gravity="center"
            android:text="图片"
            android:textColor="@color/C5"
            android:textSize="@dimen/F4" />

        <TextView
            android:id="@+id/send_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/chat_takepic_normal"
            android:gravity="center"
            android:text="拍照"
            android:textColor="@color/C5"
            android:textSize="@dimen/F4" />

        <TextView
            android:id="@+id/send_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/chat_location_noraml"
            android:gravity="center"
            android:text="位置"
            android:textColor="@color/C5"
            android:textSize="@dimen/F4" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" >

        <TextView
            android:id="@+id/send_video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/chat_video_normal"
            android:gravity="center"
            android:text="视频"
            android:textColor="@color/C5"
            android:textSize="@dimen/F4"
            android:visibility="gone" />

        <TextView
            android:id="@+id/send_voice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/chat_voice_call_normal"
            android:gravity="center"
            android:text="语音"
            android:textColor="@color/C5"
            android:textSize="@dimen/F4"
            android:visibility="gone" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/biankang"
            android:gravity="center"
            android:text="6"
            android:visibility="invisible" />
    </LinearLayout>

</LinearLayout>