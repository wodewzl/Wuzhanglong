<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/show_name_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
             >

            <TextView
                android:id="@+id/trade_value_text"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="21dp"
                android:layout_marginRight="11dp"
                android:background="@drawable/crm_product_name"
                android:gravity="center|center_vertical|center_horizontal"
                android:text="22"
                android:textColor="@color/C1" />

            <ImageView
                android:id="@+id/trade_value_image"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/crm_product_name" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="姓名" />
        </LinearLayout>

        <TextView
            android:id="@+id/huikuan_money"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="姓名" />

        <TextView
            android:id="@+id/complete_value"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="姓名" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0.7dp"
        android:layout_marginLeft="40dp"
        android:background="@color/gray_bg_01" />

</LinearLayout>